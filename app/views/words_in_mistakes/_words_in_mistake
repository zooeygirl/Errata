  		<div class="checkbox">
       <div class="word_choice">
        	<div class="cb"><%= b.check_box %></div>
         	<%= b.label %> 	
        </div> </div>
 <% end %>

 <div class="actions">
        <%= w.submit "Select Words", :name => "select_words" %>
 </div>

 <%= link_to 'Delete', essay_paragraph_sentence_words_in_mistake_path(@essay, @paragraph, sentence, words_in_mistake), method: :delete, data: { confirm: 'Are you sure?' } %> 

<% end %>
</div>